# Database Configuration
DATABASE_URL=sqlite:///./connector_framework.db

# Application Settings
APP_NAME=Connector Framework Manager
DEBUG=false

# JWT Configuration
# Generate a secure secret key for JWT tokens
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-here-replace-with-secure-random-string

# OAuth Configuration
# Base URL for OAuth redirects (should match your deployment URL)
OAUTH_REDIRECT_BASE=http://localhost:3001

# Jira OAuth Configuration
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret

# Confluence OAuth Configuration
CONFLUENCE_CLIENT_ID=your-confluence-client-id
CONFLUENCE_CLIENT_SECRET=your-confluence-client-secret

# Slack OAuth Configuration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Notion OAuth Configuration
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret

# Figma OAuth Configuration
FIGMA_CLIENT_ID=your-figma-client-id
FIGMA_CLIENT_SECRET=your-figma-client-secret

# Datadog OAuth Configuration
DATADOG_CLIENT_ID=your-datadog-client-id
DATADOG_CLIENT_SECRET=your-datadog-client-secret
